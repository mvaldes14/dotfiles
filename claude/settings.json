{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test *)",
      "Read(~/.zshrc)"
    ],
    "deny": [
      "Bash(curl *)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "env": {
    "CLAUDE_CODE_THEME": "dark",
    "CLAUDE_CODE_ENABLE_TELEMETRY": 1
  },
  "statusLine": {
    "type": "command",
    "command": "~/git/dotfiles/claude/status_line.sh"
  },
  "includeCoAuthoredBy": false,
  "spinnerTipsEnabled": false
}
