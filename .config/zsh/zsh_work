bruh () {
  local selection
  selection=$(compgen -W "$(dcc jira story list --json | jq '.[].ID')" -- "$1" | fzf --no-preview)

  if [[ -n $selection ]]; then
    summary=$(dcc jira story show --id $selection --json | jq '.fields.summary' | tr -d ':' | tr ' ' '-' | tr -d '"')
    git checkout -b "minor/$selection/$summary"
  fi
}
