# Navigation and tmux
alias dot='cd $DOTFILES'
alias cdg=~/.local/bin/tmux-layout.sh
alias cdr='cd $(find ~/git -maxdepth 3 -type d | fzf --no-preview)'
alias tmks=~/.local/bin/tmux-sessionkiller.sh
alias tmkw=~/.local/bin/tmux-windowkiller.sh

# Utilities
