#!/bin/sh

date=$(date +%s)
for r in us-east-1 ;do
	for p in browse cgraph telemetry; do
		for e in test stage prod; do
		dir="/tmp/jws/${r}/${p}/${e}"
		mkdir -p "$dir"
			echo "Fetching ${r}/${p}/${e}"
			aws ec2 describe-instances --profile "${p}_${e}" --region "$r" --output text --query "Reservations[*].Instances[*].{
			        Instance:InstanceId,
			        Type:InstanceType,
			        AZ:Placement.AvailabilityZone,
			        Name:Tags[?Key==\`Name\`]|[0].Value,
			        pubIP:PublicIpAddress,
			        IP:PrivateIpAddress,
			        State:State.Name
			}" | sed "s/$/    ${p}_${e}/" > "$dir/$date" &
		done
	done
done

# Wait for all background fetches to complete before linking
wait

# Link current symlinks after all data is fully written
for r in us-east-1 ;do
	for p in browse cgraph telemetry; do
		for e in test stage prod; do
			dir="/tmp/jws/${r}/${p}/${e}"
			ln -fs "$dir/$date" "$dir/current"
		done
	done
done
